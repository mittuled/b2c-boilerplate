    "success": {
      "$value": "{color.green.600}",
      "$type": "color",
      "$extensions": { "mode": { "dark": "{color.green.500}" } }
    },
    "warning": {
      "$value": "{color.amber.600}",
      "$type": "color",
      "$extensions": { "mode": { "dark": "{color.amber.500}" } }
    }
