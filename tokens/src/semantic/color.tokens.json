{
  "color": {
    "primary": {
      "$value": "{color.blue.600}",
      "$type": "color",
      "$extensions": { "mode": { "dark": "{color.blue.500}" } }
    },
    "primary-hover": {
      "$value": "{color.blue.700}",
      "$type": "color",
      "$extensions": { "mode": { "dark": "{color.blue.100}" } }
    },
    "secondary": {
      "$value": "{color.violet.600}",
      "$type": "color",
      "$extensions": { "mode": { "dark": "{color.violet.500}" } }
    },
    "background": {
      "$value": "{color.white}",
      "$type": "color",
      "$extensions": { "mode": { "dark": "{color.slate.900}" } }
    },
    "surface": {
      "$value": "{color.slate.50}",
      "$type": "color",
      "$extensions": { "mode": { "dark": "{color.slate.800}" } }
    },
    "text-primary": {
      "$value": "{color.slate.900}",
      "$type": "color",
      "$extensions": { "mode": { "dark": "{color.slate.50}" } }
